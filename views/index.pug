extends layout

block content

  div.checked-media-container
    figure
      div.streams
        video.stream(
          id="checked-video"
          autoplay
          playsinline
        )
        figcaption
          button#check-media Check Media
          button#start-call  Join Game
        p#room-status-msg
  h1#game-name
    | Guess
    span Who?
  main#content
    figure
      div.streams
        video.stream(
          id="self-video"
          autoplay
          playsinline
        )
        video.stream(
          id="remote-video"
          autoplay
        )

  p#choose Please choose a character card for the other player to guess.
  div#game.game-container
    div.self-board
       div#gameboard.game-item
       div.guess-panel
        div.pickedcard
         img#y(src='images/test.png')
         div#name Your character is
        button#guess I'm Ready to Guess
    div.peer-board
      p#introduction This is your opponent's board...
      div#gameboard2


  div#togglechat.chat-container
    ul.chat-area
    .chat-box
      form.chat-form
        input#chat-input(placeholder='')
        button#chat-btn(type='submit') Send

  script.
    window.NAMESPACE = "#{namespace}";
